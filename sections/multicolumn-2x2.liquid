{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

<style>
.multicolumn-image-grid {
  display: grid;
  gap: var(--grid-gap, 1rem);
  margin: var(--grid-margin, 0);
  padding: var(--grid-padding, 0);
}
.multicolumn-image-grid--1,
.multicolumn-image-grid--2,
.multicolumn-image-grid--3 { grid-template-columns: 1fr; }
.multicolumn-image-grid--4 { grid-template-columns: repeat(2, 1fr); }
.multicolumn-image-grid img {
  width: 100%;
  height: auto;
  object-fit: cover;
}
.multicolumn-card__link {
  display: block;
  text-decoration: none;
  color: inherit;
}
.multicolumn-card__link:hover {
  text-decoration: none;
}
</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="multicolumn color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div
    class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin multicolumn__title">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
        {%- if section.settings.button_label != blank and show_mobile_slider -%}
          <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">
            {{- section.settings.button_label | escape -}}
          </a>
        {%- endif -%}
      </div>
    {%- endunless -%}
    <slider-component class="slider-mobile-gutter">
      <ul
        class="multicolumn-list contains-content-container grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--tablet grid--peek{% endif %}"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.image.aspect_ratio
            endif
          endfor
        -%}
        {%- for block in section.blocks -%}
          {%- assign empty_column = '' -%}
          {%- if block.settings.article == blank
            and block.settings.image == blank
            and block.settings.title == blank
            and block.settings.text == blank
            and block.settings.link_label == blank
          -%}
            {%- assign empty_column = ' multicolumn-list__item--empty' -%}
          {%- endif -%}

          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {%- liquid
              assign card_link = ''
              if block.settings.article != blank
                assign card_link = block.settings.article.url
              elsif block.settings.link != blank
                assign card_link = block.settings.link
              endif
            -%}
            <div class="multicolumn-card content-container">
              {%- if card_link != blank -%}<a href="{{ card_link }}" class="multicolumn-card__link">{%- endif -%}
              {%- if block.settings.article != blank -%}
                {%- assign article = block.settings.article -%}
                {%- if article.image != blank -%}
                  <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' %} multicolumn-card-spacing{% endif %}">
                    <div class="multicolumn-image-grid multicolumn-image-grid--1" style="--grid-gap: {{ block.settings.image_gap | default: 16 }}px; --grid-margin: {{ block.settings.image_margin | default: 0 }}px; --grid-padding: {{ block.settings.image_padding | default: 0 }}px;">
                        {{ article.image | image_url: width: 800 | image_tag: class: 'multicolumn-grid__image', loading: 'lazy' }}
                    </div>
                  </div>
                {%- endif -%}
              {%- else -%}
                {%- assign has_images = false -%}
                {%- assign has_cloudinary = false -%}
                {%- if block.settings.image != blank or block.settings.image_2 != blank or block.settings.image_3 != blank or block.settings.image_4 != blank -%}
                  {%- assign has_images = true -%}
                  {%- assign image_count = 0 -%}
                  {%- if block.settings.image != blank -%}{%- assign image_count = image_count | plus: 1 -%}{%- endif -%}
                  {%- if block.settings.image_2 != blank -%}{%- assign image_count = image_count | plus: 1 -%}{%- endif -%}
                  {%- if block.settings.image_3 != blank -%}{%- assign image_count = image_count | plus: 1 -%}{%- endif -%}
                  {%- if block.settings.image_4 != blank -%}{%- assign image_count = image_count | plus: 1 -%}{%- endif -%}
                {%- endif -%}
                {%- if block.settings.cloudinary_id != blank or block.settings.cloudinary_id_2 != blank or block.settings.cloudinary_id_3 != blank or block.settings.cloudinary_id_4 != blank -%}
                  {%- assign has_cloudinary = true -%}
                  {%- assign cloudinary_count = 0 -%}
                  {%- if block.settings.cloudinary_id != blank -%}{%- assign cloudinary_count = cloudinary_count | plus: 1 -%}{%- endif -%}
                  {%- if block.settings.cloudinary_id_2 != blank -%}{%- assign cloudinary_count = cloudinary_count | plus: 1 -%}{%- endif -%}
                  {%- if block.settings.cloudinary_id_3 != blank -%}{%- assign cloudinary_count = cloudinary_count | plus: 1 -%}{%- endif -%}
                  {%- if block.settings.cloudinary_id_4 != blank -%}{%- assign cloudinary_count = cloudinary_count | plus: 1 -%}{%- endif -%}
                {%- endif -%}
                
                {%- if has_cloudinary -%}
                  <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' %} multicolumn-card-spacing{% endif %}">
                    <div 
                      class="multicolumn-image-grid multicolumn-image-grid--{{ cloudinary_count }}"
                      style="--grid-gap: {{ block.settings.image_gap | default: 16 }}px; --grid-margin: {{ block.settings.image_margin | default: 0 }}px; --grid-padding: {{ block.settings.image_padding | default: 0 }}px;"
                    >
                      {%- if block.settings.cloudinary_id != blank -%}
                        {% render 'aa-cloudinary-image', public_id: block.settings.cloudinary_id, class: 'multicolumn-grid__image', loading: 'lazy' %}
                      {%- endif -%}
                      {%- if block.settings.cloudinary_id_2 != blank -%}
                        {% render 'aa-cloudinary-image', public_id: block.settings.cloudinary_id_2, class: 'multicolumn-grid__image', loading: 'lazy' %}
                      {%- endif -%}
                      {%- if block.settings.cloudinary_id_3 != blank -%}
                        {% render 'aa-cloudinary-image', public_id: block.settings.cloudinary_id_3, class: 'multicolumn-grid__image', loading: 'lazy' %}
                      {%- endif -%}
                      {%- if block.settings.cloudinary_id_4 != blank -%}
                        {% render 'aa-cloudinary-image', public_id: block.settings.cloudinary_id_4, class: 'multicolumn-grid__image', loading: 'lazy' %}
                      {%- endif -%}
                    </div>
                  </div>
                {%- elsif has_images -%}
                  <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' %} multicolumn-card-spacing{% endif %}">
                    <div 
                      class="multicolumn-image-grid multicolumn-image-grid--{{ image_count }}"
                      style="--grid-gap: {{ block.settings.image_gap | default: 16 }}px; --grid-margin: {{ block.settings.image_margin | default: 0 }}px; --grid-padding: {{ block.settings.image_padding | default: 0 }}px;"
                    >
                      {%- if block.settings.image != blank -%}
                        {{ block.settings.image | image_url: width: 800 | image_tag: class: 'multicolumn-grid__image', loading: 'lazy' }}
                      {%- endif -%}
                      {%- if block.settings.image_2 != blank -%}
                        {{ block.settings.image_2 | image_url: width: 800 | image_tag: class: 'multicolumn-grid__image', loading: 'lazy' }}
                      {%- endif -%}
                      {%- if block.settings.image_3 != blank -%}
                        {{ block.settings.image_3 | image_url: width: 800 | image_tag: class: 'multicolumn-grid__image', loading: 'lazy' }}
                      {%- endif -%}
                      {%- if block.settings.image_4 != blank -%}
                        {{ block.settings.image_4 | image_url: width: 800 | image_tag: class: 'multicolumn-grid__image', loading: 'lazy' }}
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}
              {%- endif -%}
              <div class="multicolumn-card__info">
                {%- if block.settings.article != blank -%}
                  {%- assign article = block.settings.article -%}
                  <h3 class="inline-richtext">
                    <a href="{{ article.url }}">{{ article.title }}</a>
                  </h3>
                  <a class="link animate-arrow" href="{{ article.url }}">
                    Read more
                    <span class="svg-wrapper">
                      <span class="icon-wrap">&nbsp;{{ 'icon-arrow.svg' | inline_asset_content }}</span>
                    </span>
                  </a>
                {%- else -%}
                  {%- if block.settings.title != blank -%}
                    <h3 class="inline-richtext">{{ block.settings.title }}</h3>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <div class="rte">{{ block.settings.text }}</div>
                  {%- endif -%}
                  {%- if block.settings.link_label != blank -%}
                    <a
                      class="link animate-arrow"
                      {% if block.settings.link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.link }}"
                      {% endif %}
                    >
                      {{- block.settings.link_label | escape -}}
                      <span class="svg-wrapper"
                        ><span class="icon-wrap">&nbsp;{{ 'icon-arrow.svg' | inline_asset_content }}</span></span
                      >
                    </a>
                  {%- endif -%}
                {%- endif -%}
              </div>
              {%- if card_link != blank -%}</a>{%- endif -%}
            </div>
          </li>
        {%- endfor -%}
      </ul>

      {%- if show_mobile_slider -%}
        <div class="slider-buttons large-up-hide">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            <span class="svg-wrapper">{{ 'icon-caret.svg' | inline_asset_content }}</span>
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            <span class="svg-wrapper">{{ 'icon-caret.svg' | inline_asset_content }}</span>
          </button>
        </div>
      {%- endif -%}
    </slider-component>
    <div class="center{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
      {%- if section.settings.button_label != blank -%}
        <a
          class="button button--primary"
          {% if section.settings.button_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.button_link }}"
          {% endif %}
        >
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

