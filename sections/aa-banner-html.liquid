      "type": "color",
      "id": "bg_solid_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "header",
      "content": "Gradient Settings"
    },
    {
      "type": "color",
      "id": "gradient_color_1",
      "label": "Gradient Start Color",
      "default": "#667eea"
    },
    {
      "type": "color",
      "id": "gradient_color_2",
      "label": "Gradient End Color",
      "default": "#764ba2"
    },
    {
      "type": "select",
      "id": "gradient_direction",
      "label": "Gradient Direction",
      "options": [
        { "value": "to right", "label": "Left to Right →" },
