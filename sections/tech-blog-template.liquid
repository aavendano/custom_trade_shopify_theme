{% style %}
.tech-blog {
  font-family: "Work Sans", "Noto Sans", sans-serif;
  background-color: #f8fafc; /* bg-slate-50 */
}

.hero-section {
  min-height: 480px;
  background-image: linear-gradient(rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.4) 100%), url("https://placehold.co/1200x600");
  background-size: cover;
  background-position: center;
  border-radius: 0.5rem;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  flex-direction: column;
  padding: 2.5rem;
  color: white;
}

.hero-content {
  text-align: left;
}

.article-item {
  margin-bottom: 2rem;
}

.article-content {
  padding-left: 1rem;
  padding-right: 1rem;
}

.sidebar ul {
  list-style: none;
  margin: 0;
}

.sidebar li {
  padding: 0.5rem 0;
}

.sidebar .media {
  padding-top: 1rem;
}

.tabs.is-boxed li.is-active a {
    border-bottom-color: #1380ec;
    color: #0d141b;
}

.tabs a {
    color: #4c739a;
}
{% endstyle %}

