<div
  class="b-container b-is-max-tablet b-py-3"
  data-cart-fragment
  data-cart='{{ cart | json | escape }}'
  x-data="cartFragment()"
  x-init="hydrate(JSON.parse($el.dataset.cart || '{}'))"
  x-bind:aria-busy="isRefreshing"
  x-bind:data-refreshing="isRefreshing"
  x-bind:data-pending-requests="pendingRequests"
>
  <div class="b-is-flex b-is-justify-content-space-between b-is-align-items-center b-mb-5 b-mx-2">
    <h1 class="b-title b-is-3 m-0">
      {{ 'sections.cart.title' | t }}
    </h1>

    <a
      href="{{ routes.all_products_collection_url }}"
      class="b-button b-is-text b-is-small"
    >
      {{ 'general.continue_shopping' | t }}
    </a>
  </div>

  {% if cart == empty %}
    <div class="b-has-text-centered b-py-6">
      <p class="b-is-size-4 b-mb-4">
        {{ 'sections.cart.empty' | t }}
      </p>
      <a href="{{ routes.all_products_collection_url }}" class="b-button b-is-primary">
        {{ 'general.continue_shopping' | t }}
      </a>
    </div>
  {% else %}
    {% for item in cart.items %}
      {% render 'cart-item-b', item: item, line_number: forloop.index %}
    {% endfor %}
  {% endif %}
</div>

{% javascript %}
  window.__CART__ = {{ cart | json }};
{% endjavascript %}

{% schema %}
{
  "name": "t:sections.main-cart-items.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
