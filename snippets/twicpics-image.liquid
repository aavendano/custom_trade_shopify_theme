{%- liquid
  assign class = class | default: ''
  assign eager = eager | default: false
  assign focus = focus | default: ''
  assign value = value
  assign image_path = image
  assign image_path = image_path | image_url | master | split: '?' | first
  if image_path contains '//playlovetoys.ca'
    assign image_path = image_path | replace: '//playlovetoys.ca', ''
  elsif image_path contains '//cdn.shopify.com'
    assign image_path = image_path | replace: '//cdn.shopify.com/s/files/1/0603/8198/6891/', '/cdn/shop/'
  endif
-%}

<twic-img
  src="{{- image_path -}}"
  {% if class != '' %}
    class="{{ class }}"
  {% endif %}
  {% if eager == true %}
    eager
  {% endif %}
  {% if focus != '' %}
    focus="{{ focus }}"
  {% endif %}
  {% if ratio != '' %}
    ratio="{{ ratio }}"
  {% endif %}
/>
