<blog-layout-{{ ai_gen_id }} class="ai-blog-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-main-{{ ai_gen_id }}">
    {% if block.settings.featured_blog and block.settings.featured_blog.articles.size > 0 %}
      {% assign featured_article = block.settings.featured_blog.articles.first %}
      <article class="ai-featured-article-{{ ai_gen_id }}">
        <div class="ai-featured-image-{{ ai_gen_id }}">
          {% if featured_article.image %}
            <img
              src="{{ featured_article.image | image_url: width: 800 }}"
              alt="{{ featured_article.image.alt | escape }}"
              loading="lazy"
              width="800"
              height="300"
            >
          {% else %}
            <div class="ai-featured-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        <div class="ai-featured-content-{{ ai_gen_id }}">
          <h2 class="ai-featured-title-{{ ai_gen_id }}">
            <a href="{{ featured_article.url }}">{{ featured_article.title }}</a>
          </h2>
          <div class="ai-featured-excerpt-{{ ai_gen_id }}">
            {{ featured_article.excerpt }}
          </div>
          <div class="ai-featured-date-{{ ai_gen_id }}">
            {{ featured_article.published_at | date: '%B %d, %Y' }}
          </div>
        </div>
      </article>
    {% endif %}

    {% if block.settings.featured_blog and block.settings.featured_blog.articles.size > 2 %}
      <div class="ai-important-articles-{{ ai_gen_id }}">
        {% for article in block.settings.featured_blog.articles limit: 2 offset: 1 %}
          <article class="ai-important-article-{{ ai_gen_id }}">
            <div class="ai-important-image-{{ ai_gen_id }}">
              {% if article.image %}
                <img
                  src="{{ article.image | image_url: width: 400 }}"
                  alt="{{ article.image.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="180"
                >
              {% else %}
                <div class="ai-important-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-important-content-{{ ai_gen_id }}">
              <h3 class="ai-important-title-{{ ai_gen_id }}">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h3>
              <div class="ai-important-excerpt-{{ ai_gen_id }}">
                {{ article.excerpt | truncate: 1000 }}
              </div>
              <div class="ai-important-date-{{ ai_gen_id }}">
                {{ article.published_at | date: '%B %d, %Y' }}
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    {% endif %}

    {% if block.settings.featured_blog and block.settings.featured_blog.articles.size > 6 %}
