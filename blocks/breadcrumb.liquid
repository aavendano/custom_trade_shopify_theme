{%- assign yoast_seo_settings = shop.metafields.yoast_seo.settings.value | default: shop.metafields.yoast_seo.settings -%}
{%- if disabled_by_yoast_seo or yoast_seo_settings.schema.useTheme.schema or yoast_seo_settings.schema.useTheme.breadcrumb -%}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": {{ position }},
        "item": {
          "@id": "{{ shop.url | append: routes.root_url }}",
          "name": "{{ block.settings.home_text | default: 'Home' | escape }}"
        }
      }
      {%- liquid
        assign position = position | plus: 1
      -%}
      {%- case template.name -%}
        {%- when 'product' -%}
          {%- if product.collections.first -%}
            ,{
              "@type": "ListItem",
              "position": {{ position }},
              "item": {
                "@id": "{{ shop.url | append: product.collections.first.url }}",
                "name": "{{ product.collections.first.title | default: 'Collection' | escape }}"
              }
            }
            {%- liquid
              assign position = position | plus: 1
            -%}
          {%- endif -%}
          ,{
            "@type": "ListItem",
            "position": {{ position }},
            "item": {
              "@id": "{{ shop.url | append: product.url }}",
              "name": "{{ product.title | default: 'Product' | escape }}"
            }
          }
        {%- when 'collection' -%}
          ,{
            "@type": "ListItem",
            "position": {{ position }},
            "item": {
              "@id": "{{ shop.url | append: collection.url }}",
              "name": "{{ collection.title | default: 'Collection' | escape }}"
            }
          }
        {%- when 'blog' -%}
          ,{
            "@type": "ListItem",
            "position": {{ position }},
            "item": {
              "@id": "{{ shop.url | append: blog.url }}",
              "name": "{{ blog.title | default: 'Blog' | escape }}"
            }
          }
        {%- when 'article' -%}
          ,{
            "@type": "ListItem",
            "position": {{ position }},
            "item": {
              "@id": "{{ shop.url | append: blog.url }}",
              "name": "{{ blog.title | default: 'Blog' | escape }}"
            }
          }
          {%- liquid
            assign position = position | plus: 1
          -%}
          ,{
            "@type": "ListItem",
            "position": {{ position }},
            "item": {
              "@id": "{{ shop.url | append: article.url }}",
              "name": "{{ article.title | default: 'Article' | escape }}"
            }
          }
        {%- when 'page' -%}
          ,{
            "@type": "ListItem",
            "position": {{ position }},
            "item": {
              "@id": "{{ shop.url | append: page.url }}",
              "name": "{{ page.title | default: 'Page' | escape }}"
            }
          }
        {%- else -%}
          {%- unless template == 'index' or template.directory == 'customers' -%}
            ,{
              "@type": "ListItem",
              "position": {{ position }},
              "item": {
                "@id": "{{ request.origin }}{{ request.path }}",
                "name": "{{ page_title | default: 'Page' | escape }}"
              }
            }
          {%- endunless -%}
      {%- endcase -%}
    ]
  }
{%- comment -%}Yoast SEO schema control block: end.{%- endcomment -%}
</script>
{%- endif -%}

