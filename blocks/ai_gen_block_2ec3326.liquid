{% doc %}
  @prompt
    Create discrete product integration blocks for a blog that look like magazine-style native advertising. Design product showcase sections that blend seamlessly with editorial content, include clear "sponsored" or "featured product" labels, and can be strategically placed between articles or in sidebars. The design should match the blog's aesthetic while subtly promoting products without being intrusive.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-native-ad-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.padding }}px;
    margin: {{ block.settings.margin }}px 0;
    border: 1px solid {{ block.settings.border_color }};
    position: relative;
    transition: all 0.3s ease;
  }

  .ai-native-ad-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-native-ad-label-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.label_background_color }};
    color: {{ block.settings.label_text_color }};
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 4px 8px;
    border-radius: 3px;
    margin-bottom: 16px;
  }

  .ai-native-ad-content-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.content_gap }}px;
    align-items: flex-start;
  }

  .ai-native-ad-image-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-native-ad-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-native-ad-{{ ai_gen_id }}:hover .ai-native-ad-image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-native-ad-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-native-ad-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-native-ad-text-{{ ai_gen_id }} {
    flex-grow: 1;
    min-width: 0;
  }

  .ai-native-ad-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    margin:0 0 8px;
    line-height: 1.3;
    text-decoration: none;
    display: block;
  }

  .ai-native-ad-title-{{ ai_gen_id }}:hover {
    color: {{ block.settings.title_hover_color }};
  }

  .ai-native-ad-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
    margin-bottom: 12px;
  }

  .ai-native-ad-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
  }

  .ai-native-ad-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.price_color }};
  }

  .ai-native-ad-vendor-{{ ai_gen_id }} {
    font-size: 13px;
    color: {{ block.settings.vendor_color }};
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }

  .ai-native-ad-cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background-color: {{ block.settings.cta_background_color }};
    color: {{ block.settings.cta_text_color }};
    text-decoration: none;
    padding: 8px 16px;
    border-radius: {{ block.settings.cta_border_radius }}px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .ai-native-ad-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.cta_hover_background_color }};
    color: {{ block.settings.cta_hover_text_color }};
    border-color: {{ block.settings.cta_hover_background_color }};
  }

  .ai-native-ad-cta-arrow-{{ ai_gen_id }} {
    width: 14px;
    height: 14px;
    transition: transform 0.3s ease;
  }

  .ai-native-ad-cta-{{ ai_gen_id }}:hover .ai-native-ad-cta-arrow-{{ ai_gen_id }} {
    transform: translateX(3px);
  }

  @media screen and (max-width: 768px) {
    .ai-native-ad-content-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: 16px;
    }

    .ai-native-ad-image-{{ ai_gen_id }} {
      width: {% if block.settings.mobile_layout == 'column' %}100%{% else %}80px{% endif %};
      height: {% if block.settings.mobile_layout == 'column' %}200px{% else %}80px{% endif %};}

    .ai-native-ad-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.9 }}px;
    }

    .ai-native-ad-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_font_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-native-ad-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.75 }}px;
    }

    .ai-native-ad-meta-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 6px;
    }
  }
{% endstyle %}<article class="ai-native-ad-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-native-ad-label-{{ ai_gen_id }}">
    {{ block.settings.sponsored_label }}
  </div>

  <div class="ai-native-ad-content-{{ ai_gen_id }}">
    {% if block.settings.product %}
      <div class="ai-native-ad-image-{{ ai_gen_id }}">
        {% if block.settings.product.featured_image %}
          <img
            src="{{ block.settings.product.featured_image | image_url: width: 400 }}"
            alt="{{ block.settings.product.featured_image.alt | escape }}"
            loading="lazy"
            width="400"
            height="400"
          >
        {% else %}
          <div class="ai-native-ad-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="ai-native-ad-text-{{ ai_gen_id }}">
        <a href="{{ block.settings.product.url }}" class="ai-native-ad-title-{{ ai_gen_id }}">
          {% if block.settings.custom_title != blank %}
            {{ block.settings.custom_title }}
          {% else %}
            {{ block.settings.product.title }}
          {% endif %}
        </a>

        {% if block.settings.custom_description != blank %}
          <div class="ai-native-ad-description-{{ ai_gen_id }}">
            {{ block.settings.custom_description }}
          </div>
        {% elsif block.settings.product.description != blank %}
          <div class="ai-native-ad-description-{{ ai_gen_id }}">
            {{ block.settings.product.description | strip_html | truncate: 120 }}
          </div>
        {% endif %}

        <div class="ai-native-ad-meta-{{ ai_gen_id }}">
          {% if block.settings.show_price %}
            <div class="ai-native-ad-price-{{ ai_gen_id }}">
              {% if block.settings.product.compare_at_price > block.settings.product.price %}
                <span style="text-decoration: line-through; opacity: 0.7; margin-right: 8px;">
                  {{ block.settings.product.compare_at_price | money }}
                </span>
              {% endif %}
              {{ block.settings.product.price | money }}
            </div>
          {% endif %}

          {% if block.settings.show_vendor and block.settings.product.vendor != blank %}
            <div class="ai-native-ad-vendor-{{ ai_gen_id }}">
              {{ block.settings.product.vendor }}
            </div>
          {% endif %}
        </div><a href="{{ block.settings.product.url }}" class="ai-native-ad-cta-{{ ai_gen_id }}">
          {{ block.settings.cta_text }}
          <svg class="ai-native-ad-cta-arrow-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    {% else %}
      <div class="ai-native-ad-image-{{ ai_gen_id }}">
        <div class="ai-native-ad-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      </div>

      <div class="ai-native-ad-text-{{ ai_gen_id }}">
        <div class="ai-native-ad-title-{{ ai_gen_id }}">
          Select a product to feature
        </div>
        <div class="ai-native-ad-description-{{ ai_gen_id }}">
          Choose a product from your store to create a native advertising block that blends seamlessly with your editorial content.
        </div>
      </div>
    {% endif %}
  </div>
</article>

