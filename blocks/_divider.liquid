{% render 'divider', id: block.id, settings: block.settings, attributes: true %}

{% schema %}
{
  "name": "divider",
  "tag": null,
  "settings": [
    {
      "type": "range",
      "id": "thickness",
      "label": "thickness",
      "min": 0.5,
      "max": 5,
      "step": 0.5,
      "unit": "px",
      "default": 1
    },
    {
      "type": "select",
      "id": "corner_radius",
      "label": "border_radius",
      "options": [
        {
          "value": "square",
          "label": "square"
        },
        {
          "value": "rounded",
          "label": "rounded"
        }
      ],
      "default": "square",
      "visible_if": "{{ block.settings.thickness > 1 }}"
    },
    {
      "type": "range",
      "id": "width_percent",
      "label": "length",
      "min": 5,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "divider",
      "category": "t:categories.layout"
    }
  ]
}
{% endschema %}
