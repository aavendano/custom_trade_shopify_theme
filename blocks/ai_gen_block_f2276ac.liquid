{% doc %}
  @prompt
    Create a rotating banner carousel section that automatically displays the latest products with smooth transitions. Include product images, titles, prices, and call-to-action buttons. The carousel should have navigation controls, auto-play functionality, and be fully responsive across all devices., imagenes cuadradas

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-carousel-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.carousel_height }}px;
  }

  .ai-carousel-track-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  .ai-carousel-slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: linear-gradient(135deg, {{ block.settings.slide_bg_color }} 0%, {{ block.settings.slide_bg_gradient }} 100%);
  }

  .ai-slide-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 40px;
    max-width: 1000px;
    width: 100%;
    padding: 40px;
  }

  .ai-product-image-container-{{ ai_gen_id }} {
    flex: 1;
    max-width: 400px;
    aspect-ratio: 1/1;
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    aspect-ratio: 1/1;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1/1;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-product-info-{{ ai_gen_id }} {
    flex: 1;
    color: {{ block.settings.text_color }};
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 500;
    margin: 0 0 24px 0;
    color: {{ block.settings.price_color }};
  }

  .ai-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    margin: 0 0 32px 0;
    opacity: 0.8;
  }

  .ai-cta-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-cta-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .ai-carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 2;
  }

  .ai-carousel-nav-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
    transform: translateY(-50%) scale(1.1);
  }

  .ai-carousel-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-carousel-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }

  .ai-carousel-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-carousel-dot-{{ ai_gen_id }}.active {
    background-color: rgba(255, 255, 255, 1);
    transform: scale(1.2);
  }

  .ai-carousel-play-pause-{{ ai_gen_id }} {
    position: absolute;
    top: 20px;
    right: 20px;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 2;
  }

  .ai-carousel-play-pause-{{ ai_gen_id }}:hover {
    background-color: rgba(0, 0, 0, 0.7);
  }

  @media screen and (max-width: 768px) {
    .ai-slide-content-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: 20px;
      padding: 20px;
    }

    .ai-product-image-container-{{ ai_gen_id }} {
      width: 100%;
      max-width: 300px;
    }

    .ai-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_size | times: 0.9 }}px;
    }

    .ai-product-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-carousel-container-{{ ai_gen_id }} {
      height: {{ block.settings.carousel_height | times: 0.8 }}px;
    }

    .ai-carousel-nav-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }

    .ai-carousel-prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-carousel-next-{{ ai_gen_id }} {
      right: 10px;
    }
  }
{% endstyle %}

<product-carousel-{{ ai_gen_id }}
  class="ai-product-carousel-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-carousel-container-{{ ai_gen_id }}">
    <div class="ai-carousel-track-{{ ai_gen_id }}">
      {% if block.settings.featured_collection != blank %}
        {% assign products = block.settings.featured_collection.products | limit: block.settings.product_limit %}
      {% else %}
        {% assign products = collections.all.products | limit: block.settings.product_limit %}
      {% endif %}

      {% for product in products %}
        <div class="ai-carousel-slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
          <div class="ai-slide-content-{{ ai_gen_id }}">
            <div class="ai-product-image-container-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 500, height: 500, crop: 'center' }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="500"
                  height="500"
                >
              {% else %}
                <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-product-info-{{ ai_gen_id }}">
              <h2 class="ai-product-title-{{ ai_gen_id }}">{{ product.title }}</h2>
              <div class="ai-product-price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span style="text-decoration: line-through; opacity: 0.6;">{{ product.compare_at_price | money }}</span>
                {% endif %}
                {{ product.price | money }}
              </div>
              {% if product.description != blank %}
                <div class="ai-product-description-{{ ai_gen_id }}">
                  {{ product.description | strip_html | truncate: 150 }}
                </div>
              {% endif %}
              <a href="{{ product.url }}" class="ai-cta-button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if products.size > 1 %}
      <button class="ai-carousel-nav-{{ ai_gen_id }} ai-carousel-prev-{{ ai_gen_id }}" aria-label="Producto anterior">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 18l-6-6 6-6"/>
        </svg>
      </button>

      <button class="ai-carousel-nav-{{ ai_gen_id }} ai-carousel-next-{{ ai_gen_id }}" aria-label="Siguiente producto">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 18l6-6-6-6"/>
        </svg>
      </button>

      <div class="ai-carousel-dots-{{ ai_gen_id }}">
        {% for product in products %}
          <button
            class="ai-carousel-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-slide="{{ forloop.index0 }}"
            aria-label="Ir a diapositiva {{ forloop.index }}"
          ></button>
        {% endfor %}
      </div>

      {% if block.settings.show_play_pause %}
        <button class="ai-carousel-play-pause-{{ ai_gen_id }}" aria-label="Reproducir/Pausar carrusel">
          <svg class="play-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z"/>
          </svg>
          <svg class="pause-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="display: none;">
            <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
          </svg>
        </button>
      {% endif %}
    {% endif %}
  </div>
</product-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.isPlaying = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-carousel-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-carousel-slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-carousel-dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-carousel-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-carousel-next-{{ ai_gen_id }}');
        this.playPauseButton = this.querySelector('.ai-carousel-play-pause-{{ ai_gen_id }}');

        if (this.slides.length <= 1) return;

        this.setupEventListeners();
        this.updateCarousel();
        
        if (this.isPlaying) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.goToNextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        if (this.playPauseButton) {
          this.playPauseButton.addEventListener('click', () => this.togglePlayPause());
        }

        this.addEventListener('mouseenter', () => this.pauseAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.isPlaying) this.startAutoplay();
        });

        document.addEventListener('visibilitychange', () => {
          if (document.hidden) {
            this.pauseAutoplay();
          } else if (this.isPlaying) {
            this.startAutoplay();
          }
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateCarousel();
      }

      goToNextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        this.updateCarousel();
      }

      goToPrevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
        this.updateCarousel();
      }

      updateCarousel() {
        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      startAutoplay() {
        this.pauseAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, this.autoplaySpeed);
        this.updatePlayPauseButton();
      }

      pauseAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
        this.updatePlayPauseButton();
      }

      togglePlayPause() {
        this.isPlaying = !this.isPlaying;
        if (this.isPlaying) {
          this.startAutoplay();
        } else {
          this.pauseAutoplay();
        }
      }

      updatePlayPauseButton() {
        if (!this.playPauseButton) return;

        const playIcon = this.playPauseButton.querySelector('.play-icon');
        const pauseIcon = this.playPauseButton.querySelector('.pause-icon');

        if (this.isPlaying && this.autoplayInterval) {
          playIcon.style.display = 'none';
          pauseIcon.style.display = 'block';
        } else {
          playIcon.style.display = 'block';
          pauseIcon.style.display = 'none';
        }
      }

      disconnectedCallback() {
        this.pauseAutoplay();
      }
    }

    customElements.define('product-carousel-{{ ai_gen_id }}', ProductCarousel{{ ai_gen_id }});
  })();
</script>

