{% doc %}
  @prompt
    Create an editorial section for in-depth storytelling and personal narratives. Design it with wider text layouts, minimal visual distractions, supporting images that complement rather than dominate the text, and typography optimized for long-form reading. Focus on creating an immersive reading experience for reflective content, life stories, and editorial pieces., viculalo a un articulo
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .editorial-block-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .editorial-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin-bottom: 2rem;
  }

  .editorial-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .editorial-meta-{{ ai_gen_id }} {
    font-size: {{ block.settings.meta_size }}px;
    color: {{ block.settings.meta_color }};
    margin-bottom: 1rem;
  }

  .editorial-content-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.line_height }};
    color: {{ block.settings.text_color }};
  }

  .editorial-content-{{ ai_gen_id }} p {
    margin-bottom: 1.5rem;
  }

  .editorial-content-{{ ai_gen_id }} h2 {
    font-size: calc({{ block.settings.text_size }}px * 1.4);
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: {{ block.settings.title_color }};
  }

  .editorial-content-{{ ai_gen_id }} h3 {
    font-size: calc({{ block.settings.text_size }}px * 1.2);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: {{ block.settings.title_color }};
  }

  .editorial-image-wrapper-{{ ai_gen_id }} {
    margin: 2rem 0;
    text-align: center;
  }

  .editorial-image-{{ ai_gen_id }} {
    max-width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_radius }}px;
  }

  .editorial-image-caption-{{ ai_gen_id }} {
    font-size: calc({{ block.settings.text_size }}px * 0.85);
    color: {{ block.settings.meta_color }};
    text-align: center;
    margin-top: 0.75rem;
    font-style: italic;
  }

  .editorial-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    max-width: 800px;
    height: auto;
    margin: 0 auto;
    background-color: #fbfbfb;
    border-radius: {{ block.settings.image_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .editorial-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-height: 400px;
  }

  .editorial-quote-{{ ai_gen_id }} {
    font-size: calc({{ block.settings.text_size }}px * 1.2);
    line-height: 1.6;
    color: {{ block.settings.quote_color }};
    border-left: 4px solid {{ block.settings.quote_accent_color }};
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .editorial-block-{{ ai_gen_id }} {
      padding: 0 15px;
    }

    .editorial-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .editorial-content-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.95);
    }
  }
{% endstyle %}

<div class="editorial-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <header class="editorial-header-{{ ai_gen_id }}">
    {% if block.settings.linked_article %}
      <h1 class="editorial-title-{{ ai_gen_id }}">{{ block.settings.linked_article.title }}</h1>
      <div class="editorial-meta-{{ ai_gen_id }}">
        {% if block.settings.show_author and block.settings.linked_article.author %}
          <span class="editorial-author-{{ ai_gen_id }}">{{ block.settings.linked_article.author }}</span>
        {% endif %}

        {% if block.settings.show_author and block.settings.linked_article.author and block.settings.show_date %}
          <span class="editorial-separator-{{ ai_gen_id }}"> • </span>
        {% endif %}

        {% if block.settings.show_date %}
          <span class="editorial-date-{{ ai_gen_id }}">
            {{- block.settings.linked_article.published_at | date: '%B %d, %Y' -}}
          </span>
        {% endif %}
      </div>
    {% else %}
      {% if block.settings.title != blank %}
        <h1 class="editorial-title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
      {% endif %}

      {% if block.settings.author != blank or block.settings.date != blank %}
        <div class="editorial-meta-{{ ai_gen_id }}">
          {% if block.settings.author != blank %}
            <span class="editorial-author-{{ ai_gen_id }}">{{ block.settings.author }}</span>
          {% endif %}

          {% if block.settings.author != blank and block.settings.date != blank %}
            <span class="editorial-separator-{{ ai_gen_id }}"> • </span>
          {% endif %}

          {% if block.settings.date != blank %}
            <span class="editorial-date-{{ ai_gen_id }}">{{ block.settings.date }}</span>
          {% endif %}
        </div>
      {% endif %}
    {% endif %}
  </header>

  {% if block.settings.linked_article and block.settings.linked_article.image %}
    <div class="editorial-image-wrapper-{{ ai_gen_id }}">
      <img
        src="{{ block.settings.linked_article.image | image_url: width: 1200 }}"
        alt="{{ block.settings.linked_article.image.alt | escape }}"
        loading="lazy"
        class="editorial-image-{{ ai_gen_id }}"
        width="{{ block.settings.linked_article.image.width }}"
        height="{{ block.settings.linked_article.image.height }}"
      >
      {% if block.settings.image_caption != blank %}
        <div class="editorial-image-caption-{{ ai_gen_id }}">{{ block.settings.image_caption }}</div>
      {% endif %}
    </div>
  {% elsif block.settings.image %}
    <div class="editorial-image-wrapper-{{ ai_gen_id }}">
      <img
        src="{{ block.settings.image | image_url: width: 1200 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        class="editorial-image-{{ ai_gen_id }}"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
      {% if block.settings.image_caption != blank %}
        <div class="editorial-image-caption-{{ ai_gen_id }}">{{ block.settings.image_caption }}</div>
      {% endif %}
    </div>
  {% elsif block.settings.show_placeholder_image %}
    <div class="editorial-image-wrapper-{{ ai_gen_id }}">
      <div class="editorial-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
      {% if block.settings.image_caption != blank %}
        <div class="editorial-image-caption-{{ ai_gen_id }}">{{ block.settings.image_caption }}</div>
      {% endif %}
    </div>
  {% endif %}

  <div class="editorial-content-{{ ai_gen_id }}">
    {% if block.settings.linked_article %}
      {{ block.settings.linked_article.content }}
    {% else %}
      {{ block.settings.content }}
    {% endif %}

    {% if block.settings.quote != blank %}
      <blockquote class="editorial-quote-{{ ai_gen_id }}">
        {{ block.settings.quote }}
      </blockquote>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Editorial Story",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Article Source"
    },
    {
      "type": "article",
      "id": "linked_article",
      "label": "Select article",
      "info": "If selected, article content will override custom content"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show article author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show article date",
      "default": true
    },
    {
      "type": "header",
      "content": "Custom Content (used if no article is selected)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Your Story Title"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author name"
    },
    {
      "type": "text",
      "id": "date",
      "label": "Date",
      "info": "Example: May 15, 2023"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Story content",
      "default": "<p>Begin your story here. This is a space for long-form content, personal narratives, and in-depth storytelling.</p><p>Add multiple paragraphs to create a rich, immersive reading experience that engages your audience.</p>"
    },
    {
      "type": "textarea",
      "id": "quote",
      "label": "Featured quote",
      "info": "Add a standout quote from your story"
    },
    {
      "type": "header",
      "content": "Featured Image (used if article has no image)"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Custom image"
    },
    {
      "type": "checkbox",
      "id": "show_placeholder_image",
      "label": "Show placeholder image when no image is available",
      "default": false
    },
    {
      "type": "text",
      "id": "image_caption",
      "label": "Image caption"
    },
    {
      "type": "header",
      "content": "Layout & Style"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 600,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Content width",
      "default": 800
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 24,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 42
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Title weight",
      "options": [
        {
          "value": "400",
          "label": "Regular"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semibold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 18
    },
    {
      "type": "range",
      "id": "line_height",
      "min": 1.3,
      "max": 2,
      "step": 0.1,
      "label": "Line height",
      "default": 1.6
    },
    {
      "type": "range",
      "id": "meta_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Meta text size",
      "default": 14
    },
    {
      "type": "range",
      "id": "image_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "meta_color",
      "label": "Meta text color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "quote_color",
      "label": "Quote text color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "quote_accent_color",
      "label": "Quote accent color",
      "default": "#797068"
    }
  ],
  "presets": [
    {
      "name": "Editorial Story"
    }
  ]
}
{% endschema %}
