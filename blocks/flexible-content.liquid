{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .flexible-content-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_right }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_left }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
    margin: 0 auto;
  }

  .flexible-content__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.layout_direction }};
    align-items: {{ block.settings.vertical_alignment }};
    gap: {{ block.settings.spacing }}px;
    position: relative;
  }

  .flexible-content__text-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
    {% if block.settings.image == blank %}
    width: 100%;
    {% endif %}
  }

  .flexible-content__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin-top: 0;
    margin-bottom: {{ block.settings.title_spacing }}px;
    font-weight: {{ block.settings.title_weight }};
    line-height: 1.2;
  }

  .flexible-content__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin-top: 0;
    margin-bottom: {{ block.settings.subtitle_spacing }}px;
    font-weight: {{ block.settings.subtitle_weight }};
    line-height: 1.3;
  }

  .flexible-content__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin-bottom: {{ block.settings.text_spacing }}px;
  }

  .flexible-content__media-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .flexible-content__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .flexible-content__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .flexible-content__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    padding-bottom: 75%;
    position: relative;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .flexible-content__image-placeholder-{{ ai_gen_id }} svg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }

  .flexible-content__buttons-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap:15px;
    margin-top: 5px;
  }

  .flexible-content__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s, color 0.3s;
  }

  .flexible-content__button--primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_color }};
    color: {{ block.settings.primary_button_text_color }};
  }

  .flexible-content__button--primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_color }};
    color: {{ block.settings.primary_button_text_color }};
  }

  .flexible-content__button--secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_color }};
    color: {{ block.settings.secondary_button_text_color }};
  }

  .flexible-content__button--secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_color }};
    color: {{ block.settings.secondary_button_text_color }};
  }

  @media screen and (max-width: 749px) {
    .flexible-content__container-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.layout_direction_mobile }};
      gap: {{ block.settings.spacing_mobile }}px;
    }

    .flexible-content__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_mobile }}px;
      margin-bottom: {{ block.settings.title_spacing_mobile }}px;
    }

    .flexible-content__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size_mobile }}px;
      margin-bottom: {{ block.settings.subtitle_spacing_mobile }}px;
    }

    .flexible-content__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
      margin-bottom: {{ block.settings.text_spacing_mobile }}px;
    }

    .flexible-content-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top_mobile }}px {{ block.settings.padding_right_mobile }}px {{ block.settings.padding_bottom_mobile }}px {{ block.settings.padding_left_mobile }}px;
    }

    .flexible-content__button-{{ ai_gen_id }} {
      padding: 10px 20px;
      font-size: {{ block.settings.button_text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="flexible-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="flexible-content__container-{{ ai_gen_id }}">
    {% if block.settings.image != blank and block.settings.image_position == 'left' %}
      <div class="flexible-content__media-{{ ai_gen_id }}">
        <div class="flexible-content__image-wrapper-{{ ai_gen_id }}">
          <img
            src="{{ block.settings.image | image_url: width: 1500 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="flexible-content__image-{{ ai_gen_id }}"
          >
        </div>
      </div>
    {% endif %}

    <div class="flexible-content__text-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        {% case block.settings.title_tag %}
          {% when 'h1' %}
            <h1 class="flexible-content__title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
          {% when 'h2' %}
            <h2 class="flexible-content__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
          {% when 'h3' %}
            <h3 class="flexible-content__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
          {% when 'h4' %}
            <h4 class="flexible-content__title-{{ ai_gen_id }}">{{ block.settings.title }}</h4>
          {% when 'h5' %}
            <h5 class="flexible-content__title-{{ ai_gen_id }}">{{ block.settings.title }}</h5>
          {% when 'h6' %}
            <h6 class="flexible-content__title-{{ ai_gen_id }}">{{ block.settings.title }}</h6>
        {% endcase %}
      {% endif %}

      {% if block.settings.subtitle != blank %}
        {% case block.settings.subtitle_tag %}
          {% when 'h1' %}
            <h1 class="flexible-content__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</h1>
          {% when 'h2' %}
            <h2 class="flexible-content__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</h2>
          {% when 'h3' %}
            <h3 class="flexible-content__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</h3>
          {% when 'h4' %}
            <h4 class="flexible-content__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</h4>
          {% when 'h5' %}
            <h5 class="flexible-content__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</h5>
          {% when 'h6' %}
            <h6 class="flexible-content__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</h6>
        {% endcase %}
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="flexible-content__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
      <div class="flexible-content__buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_button_text != blank and block.settings.primary_button_link != blank %}
          <a
            href="{{ block.settings.primary_button_link }}"
            class="flexible-content__button-{{ ai_gen_id }} flexible-content__button--primary-{{ ai_gen_id }}"
          >
            {{ block.settings.primary_button_text }}
          </a>
        {% endif %}
        {% if block.settings.secondary_button_text != blank and block.settings.secondary_button_link != blank %}
          <a
            href="{{ block.settings.secondary_button_link }}"
            class="flexible-content__button-{{ ai_gen_id }} flexible-content__button--secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    {% if block.settings.image != blank and block.settings.image_position == 'right' %}
      <div class="flexible-content__media-{{ ai_gen_id }}">
        <div class="flexible-content__image-wrapper-{{ ai_gen_id }}">
          <img
            src="{{ block.settings.image | image_url: width: 1500 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="flexible-content__image-{{ ai_gen_id }}"
          >
        </div>
      </div>
    {% endif %}
  </div>
</div>

