{% doc %}
  @prompt
    Create a modern, responsive slideshow component with smooth transitions, elegant typography, and contemporary design elements. Include customizable slide content areas for images, headlines, and call-to-action buttons with modern styling and animations.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: {{ block.settings.slideshow_height }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-slideshow-{{ ai_gen_id }} {
      height: {{ block.settings.slideshow_height_mobile }}px;
    }
  }

  .ai-slideshow-slides-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform {{ block.settings.transition_speed }}s ease-in-out;
  }

  .ai-slideshow-slide-{{ ai_gen_id }} {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-slideshow-slide-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-slideshow-slide-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: {{ block.settings.text_alignment }};
    padding: 20px;
    max-width: 800px;
    width: 90%;
    color: {{ block.settings.text_color }};
    background-color: {{ block.settings.content_bg_color | color_modify: 'alpha', block.settings.content_bg_opacity | divided_by: 100.0 }};
    border-radius: {{ block.settings.content_border_radius }}px;
    padding: 40px;
  }

  .ai-slideshow-slide-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin-bottom: 15px;
    font-weight: 600;
  }

  @media screen and (max-width: 749px) {
    .ai-slideshow-slide-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }
  }

  .ai-slideshow-slide-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin-bottom: 25px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-slideshow-slide-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.8 }}px;
    }
  }

  .ai-slideshow-slide-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-slideshow-slide-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-slideshow-nav-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    gap: 10px;
    z-index: 3;
  }

  .ai-slideshow-nav-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color | color_modify: 'alpha', 0.5 }};
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .ai-slideshow-nav-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_color }};
    transform: scale(1.2);
  }

  .ai-slideshow-arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 3;
    width: 40px;
    height: 40px;
    background-color: {{ block.settings.arrow_bg_color | color_modify: 'alpha', block.settings.arrow_bg_opacity | divided_by: 100.0 }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-slideshow-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_bg_color | color_modify: 'alpha', block.settings.arrow_bg_opacity | plus: 20 | divided_by: 100.0 }};
  }

  .ai-slideshow-arrow-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    fill: none;
    stroke: {{ block.settings.arrow_color }};
    stroke-width: 2;
  }

  .ai-slideshow-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-slideshow-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-slideshow-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-slideshow-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }
{% endstyle %}

<slideshow-block-{{ ai_gen_id }} 
  class="ai-slideshow-{{ ai_gen_id }}" 
  data-autoplay="{{ block.settings.autoplay }}" 
  data-autoplay-speed="{{ block.settings.autoplay_speed | times: 1000 }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-slideshow-slides-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% assign image_key = 'slide_' | append: i | append: '_image' %}
      {% assign title_key = 'slide_' | append: i | append: '_title' %}
      {% assign subtitle_key = 'slide_' | append: i | append: '_subtitle' %}
      {% assign button_text_key = 'slide_' | append: i | append: '_button_text' %}
      {% assign button_link_key = 'slide_' | append: i | append: '_button_link' %}
      
      {% assign image = block.settings[image_key] %}
      {% assign title = block.settings[title_key] %}
      {% assign subtitle = block.settings[subtitle_key] %}
      {% assign button_text = block.settings[button_text_key] %}
      {% assign button_link = block.settings[button_link_key] %}
      
      {% if image != blank or title != blank or subtitle != blank %}
        <div class="ai-slideshow-slide-{{ ai_gen_id }}" data-slide-index="{{ forloop.index0 }}">
          {% if image != blank %}
            <img 
              src="{{ image | image_url: width: 2000 }}" 
              alt="{{ image.alt | escape }}" 
              width="2000"
              height="{{ image.height | times: 2000 | divided_by: image.width }}"
              loading="{% if forloop.index == 1 %}eager{% else %}lazy{% endif %}" 
              class="ai-slideshow-slide-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-slideshow-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
          
          <div class="ai-slideshow-slide-content-{{ ai_gen_id }}">
            {% if title != blank %}
              <h2 class="ai-slideshow-slide-title-{{ ai_gen_id }}">{{ title }}</h2>
            {% endif %}
            
            {% if subtitle != blank %}
              <div class="ai-slideshow-slide-subtitle-{{ ai_gen_id }}">{{ subtitle }}</div>
            {% endif %}
            
            {% if button_text != blank and button_link != blank %}
              <a href="{{ button_link }}" class="ai-slideshow-slide-button-{{ ai_gen_id }}">{{ button_text }}</a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  
  {% if block.settings.show_arrows %}
    <div class="ai-slideshow-arrow-{{ ai_gen_id }} ai-slideshow-prev-{{ ai_gen_id }}" aria-label="Previous slide">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18l-6-6 6-6" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    <div class="ai-slideshow-arrow-{{ ai_gen_id }} ai-slideshow-next-{{ ai_gen_id }}" aria-label="Next slide">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 18l6-6-6-6" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  {% endif %}
  
  {% if block.settings.show_dots %}
    <div class="ai-slideshow-nav-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% assign image_key = 'slide_' | append: i | append: '_image' %}
        {% assign title_key = 'slide_' | append: i | append: '_title' %}
        {% assign subtitle_key = 'slide_' | append: i | append: '_subtitle' %}
        
        {% assign image = block.settings[image_key] %}
        {% assign title = block.settings[title_key] %}
        {% assign subtitle = block.settings[subtitle_key] %}
        
        {% if image != blank or title != blank or subtitle != blank %}
          <div 
            class="ai-slideshow-nav-dot-{{ ai_gen_id }} {% if forloop.index == 1 %}active{% endif %}" 
            data-slide-index="{{ forloop.index0 }}"
            aria-label="Go to slide {{ forloop.index }}"
          ></div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</slideshow-block-{{ ai_gen_id }}>

<script>
  (function() {
    class SlideshowBlock extends HTMLElement {
      constructor() {
        super();
        this.slideIndex = 0;
        this.slides = this.querySelectorAll(`.ai-slideshow-slide-{{ ai_gen_id }}`);
        this.dots = this.querySelectorAll(`.ai-slideshow-nav-dot-{{ ai_gen_id }}`);
        this.prevButton = this.querySelector(`.ai-slideshow-prev-{{ ai_gen_id }}`);
        this.nextButton = this.querySelector(`.ai-slideshow-next-{{ ai_gen_id }}`);
        this.slidesContainer = this.querySelector(`.ai-slideshow-slides-{{ ai_gen_id }}`);
        this.autoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed, 10);
        this.autoplayInterval = null;
        this.slideCount = this.slides.length;
        this.isTransitioning = false;
      }
      
      connectedCallback() {
        if (this.slideCount <= 1) return;
        
        this.setupEventListeners();
        
        if (this.autoplay) {
          this.startAutoplay();
        }
      }
      
      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
      
      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prevSlide());
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }
        
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });
        
        // Pause autoplay on hover
        this.addEventListener('mouseenter', () => {
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
          }
        });
        
        this.addEventListener('mouseleave', () => {
          if (this.autoplay) {
            this.startAutoplay();
          }
        });
        
        // Touch events for swipe
        let touchStartX = 0;
        let touchEndX = 0;
        
        this.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
        }, { passive: true });
        
        this.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe(touchStartX, touchEndX);
        }, { passive: true });
      }
      
      handleSwipe(startX, endX) {
        const threshold = 50;
        if (startX - endX > threshold) {
          this.nextSlide();
        } else if (endX - startX > threshold) {
          this.prevSlide();
        }
      }
      
      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }
      
      prevSlide() {
        if (this.isTransitioning) return;
        const newIndex = (this.slideIndex - 1 + this.slideCount) % this.slideCount;
        this.goToSlide(newIndex);
      }
      
      nextSlide() {
        if (this.isTransitioning) return;
        const newIndex = (this.slideIndex + 1) % this.slideCount;
        this.goToSlide(newIndex);
      }
      
      goToSlide(index) {
        if (this.isTransitioning || index === this.slideIndex) return;
        
        this.isTransitioning = true;
        this.slideIndex = index;
        
        // Update active dot
        this.dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
        
        // Move slides
        this.slidesContainer.style.transform = `translateX(-${index * 100}%)`;
        
        // Reset transition lock after animation completes
        setTimeout(() => {
          this.isTransitioning = false;
        }, {{ block.settings.transition_speed | times: 1000 }});
      }
    }
    
    customElements.define('slideshow-block-{{ ai_gen_id }}', SlideshowBlock);
  })();
</script>

