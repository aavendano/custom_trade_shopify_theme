{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-post-{{ ai_gen_id }} {
    display: block;
    margin: 0 auto;
    width: {{ block.settings.width }}%;
    max-width: 100%;
  }

  .ai-blog-post__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-blog-post__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-blog-post__image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;aspect-ratio: {{ block.settings.image_aspect_ratio }};}

  .ai-blog-post__meta-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    font-size: {{ block.settings.meta_font_size }}px;
    color: {{ block.settings.meta_color }};
  }

  .ai-blog-post__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    line-height: 1.3;
  }

  .ai-blog-post__title-link-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    text-decoration: none;}

  .ai-blog-post__title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.title_hover_color }};
  }

  .ai-blog-post__content-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_font_size }}px;
    line-height: 1.6;
    color: {{ block.settings.content_color }};
  }

  .ai-blog-post__content-{{ ai_gen_id }} h1,
  .ai-blog-post__content-{{ ai_gen_id }} h2,
  .ai-blog-post__content-{{ ai_gen_id }} h3,
  .ai-blog-post__content-{{ ai_gen_id }} h4,
  .ai-blog-post__content-{{ ai_gen_id }} h5,
  .ai-blog-post__content-{{ ai_gen_id }} h6 {
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    color: {{ block.settings.title_color }};
  }

  .ai-blog-post__content-{{ ai_gen_id }} p {
    margin-bottom: 1em;
  }

  .ai-blog-post__content-{{ ai_gen_id }} ul,
  .ai-blog-post__content-{{ ai_gen_id }} ol {
    margin-bottom: 1em;padding-left: 1.5em;
  }

  .ai-blog-post__content-{{ ai_gen_id }} blockquote {
    margin: 1.5em 0;
    padding: 1em 1.5em;
    border-left: 4px solid {{ block.settings.title_color }};background-color: rgba(0, 0, 0, 0.05);
    font-style: italic;
  }

  .ai-blog-post__content-{{ ai_gen_id }} img {
    max-width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin: 1em 0;
  }

  .ai-blog-post__content-{{ ai_gen_id }} a {
    color: {{ block.settings.button_color }};
    text-decoration: underline;
  }

  .ai-blog-post__content-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.button_hover_color }};
  }

  .ai-blog-post__read-more-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: 16px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    color: {{ block.settings.button_color }};
    text-decoration: none;
  }

  .ai-blog-post__read-more-{{ ai_gen_id }}:hover {
    color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-blog-post__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.8 }}px;
    }

    .ai-blog-post__meta-{{ ai_gen_id }} {
      font-size: {{ block.settings.meta_font_size | times: 0.9 }}px;
    }

    .ai-blog-post__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.content_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

{% assign article_handle = block.settings.article_handle %}
{% if article_handle != blank %}
  {% assign article = articles[article_handle] %}
{% else %}
  {% assign article = block.settings.article %}
{% endif %}
{% if article != blank %}
  <div class="ai-blog-post-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
    <div class="ai-blog-post__container-{{ ai_gen_id }}">
      {% if article.image and block.settings.show_image %}
        <div class="ai-blog-post__image-{{ ai_gen_id }}">
          <img
            src="{{ article.image | image_url: width: 1200 }}"
            alt="{{ article.image.alt | escape }}"
            width="{{ article.image.width }}"
            height="{{ article.image.height }}"
            loading="lazy"
          >
        </div>
      {% endif %}

      {% if block.settings.show_meta %}
        <div class="ai-blog-post__meta-{{ ai_gen_id }}">
          {% if block.settings.show_date %}
            <span class="ai-blog-post__date-{{ ai_gen_id }}">
              {{ article.published_at | date: block.settings.date_format }}
            </span>
          {% endif %}

          {% if article.author != blank and block.settings.show_author %}
            <span class="ai-blog-post__author-{{ ai_gen_id }}">
              {% if block.settings.show_date %}|{% endif %} By {{ article.author }}
            </span>
          {% endif %}
        </div>
      {% endif %}

      <h2 class="ai-blog-post__title-{{ ai_gen_id }}">
        <a href="{{ article.url }}" class="ai-blog-post__title-link-{{ ai_gen_id }}">
          {{ article.title }}
        </a>
      </h2>

      {% if block.settings.show_content %}
        <div class="ai-blog-post__content-{{ ai_gen_id }}">
          {{ article.content }}
        </div>
      {% endif %}

      {% if block.settings.show_button %}
        <a href="{{ article.url }}" class="ai-blog-post__read-more-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
{% endif %}
